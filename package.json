{
  "name": "tap2translate",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "description": "A translation app that helps you translate text with one click",
  "dependencies": {
    "axios": "^1.8.2",
    "clipboardy": "^4.0.0",
    "dotenv": "^16.4.5",
    "electron-settings": "^4.0.2",
    "https-proxy-agent": "^7.0.4",
    "settings": "^0.1.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.tap2translate.app",
    "productName": "Tap2Translate",
    "copyright": "Copyright Â© 2024 Your Name",
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "*.svg",
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".env.example",
        "to": ".env.example"
      }
    ],
    "asarUnpack": [],
    "npmRebuild": false
  }
}
